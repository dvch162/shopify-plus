<div class="contact-information page-width">
  <div class="a-contacts">
    {% for block in section.blocks %}
    <div class="support">
      <i class="fa {{ block.settings.icon }}"></i>
      <h2>{{ block.settings.title }}</h2>
      {{ block.settings.content }}
      {% if block.settings.btn-text != "" %}
        <a href="{{ block.settings.btn-url }}"> {{ block.settings.btn-text }}</a>
      {% endif %}
    </div>
    {% endfor %}
  </div>
  <div class="service-hour">
    <h2>Customer Service Hours</h2>
    <div class="period-container">
      <div class="period-1">
        <h3>{{ section.settings.period-1-title }}&nbsp;:</h3>
        {{ section.settings.period-1-service }}
      </div>
      <div class="period-2">
        <h3>{{ section.settings.period-2-title }}&nbsp;:</h3>
        {{ section.settings.period-2-service }}
      </div>
      <div class="period-3">
        <h3>{{ section.settings.period-3-title }}&nbsp;:</h3>
        {{ section.settings.period-3-service }}
      </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Contact information",
    "max_blocks": 3,
    "settings": [
      {
        "id": "period-1-title",
        "type": "text",
        "label": "First Period"
      },
      {
        "id": "period-1-service",
        "type": "richtext",
        "label": "First Period Service"
      },
      {
        "id": "period-2-title",
        "type": "text",
        "label": "Second Period"
      },
      {
        "id": "period-2-service",
        "type": "richtext",
        "label": "Second Period Service"
      },
      {
        "id": "period-3-title",
        "type": "text",
        "label": "Holiday Title"
      },
      {
        "id": "period-3-service",
        "type": "richtext",
        "label": "Holiday Period Service"
      }
    ],
    "blocks": [
      { 
        "type": "supports",
        "name": "Supports",
        "settings": [
          {
            "id": "icon",
            "type": "text",
            "label": "Font Awesome Icon Name"
          },
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "content",
            "type": "richtext",
            "label": "Content"
          },
          {
            "id": "btn-text",
            "type": "text",
            "label": "Button Text"
          },
          {
            "id": "btn-url",
            "type": "url",
            "label": "Button Link"
          }
        ]
      }
    ]
  }
{% endschema %}

